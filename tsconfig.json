{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./build"
  },
  "exclude": [
    "node_modules",
    "example/index.ts",
    "sidecar"
  ]
}