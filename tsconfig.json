    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "include": ["core/**/*.ts"],
  "exclude": ["example/index.ts", "sidecar"]
}